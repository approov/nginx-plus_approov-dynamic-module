#!/bin/sh

set -eu

Main()
{
  for input in "${@}"; do
    case "${input}" in
      --with-nginx-conf )
          cp -b ./etc/nginx/nginx.conf /etc/nginx/nginx.conf
        ;;
      --with-server-examples )
          cp -r -b ./etc/nginx/conf.d /etc/nginx
        ;;
    esac
  done

  cp -r ./etc/nginx/modules/approov /etc/nginx/modules
}

Main ${@}
